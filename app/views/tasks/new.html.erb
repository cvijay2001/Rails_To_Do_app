<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card shadow mt-5">
        <div class="card-header bg-secondary text-white">
          <h1 class="text-center mb-0">New Task</h1>
        </div>
        <div class="card-body">
          <%= form_with(model: @task, local: true, class: 'needs-validation', novalidate: true) do |form| %>
            <% if @task.errors.any? %>
              <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <h5 class="alert-heading"><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h5>
                <ul class="mb-0">
                  <% @task.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
              </div>
            <% end %>

            <div class="mb-3">
              <%= form.label :title, class: 'form-label' %>
              <%= form.text_field :title, class: "form-control #{'is-invalid' if @task.errors[:title].any?}", required: true %>
              <% if @task.errors[:title].any? %>
                <div class="invalid-feedback"><%= @task.errors[:title].join(", ") %></div>
              <% end %>
            </div>

            <div class="mb-3">
              <%= form.label :description, class: 'form-label' %>
              <%= form.text_area :description, class: "form-control #{'is-invalid' if @task.errors[:description].any?}", rows: 3 %>
              <% if @task.errors[:description].any? %>
                <div class="invalid-feedback"><%= @task.errors[:description].join(", ") %></div>
              <% end %>
            </div>

            <div class="mb-3">
              <%= form.label :due_date, class: 'form-label' %>
              <%= form.date_field :due_date, class: "form-control #{'is-invalid' if @task.errors[:due_date].any?}" %>
              <% if @task.errors[:due_date].any? %>
                <div class="invalid-feedback"><%= @task.errors[:due_date].join(", ") %></div>
              <% end %>
            </div>

            <div class="mb-3">
              <%= form.label :importance, class: 'form-label' %>
              <%= form.select :importance, options_for_select(1..10), {}, class: "form-select #{'is-invalid' if @task.errors[:importance].any?}" %>
              <% if @task.errors[:importance].any? %>
                <div class="invalid-feedback"><%= @task.errors[:importance].join(", ") %></div>
              <% end %>
            </div>

            <div class="d-grid gap-2">
              <%= form.submit 'Create Task', class: 'btn btn-primary btn-lg' %>
              <%= link_to 'Back', tasks_path, class: 'btn btn-outline-secondary mt-2' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>