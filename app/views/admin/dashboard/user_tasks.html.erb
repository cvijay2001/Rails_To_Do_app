<!-- app/views/admin/dashboard/user_tasks.html.erb -->

<h2>Tasks for: - <%= @user.email %></h2>

<%= link_to 'Back to Users', admin_dashboard_path, class: 'btn btn-secondary mb-3' %>


<% if @tasks.any? %>
  <table class="table table-striped mt-2">
    <thead>
      <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Description</th>
        <th>Due Date</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task.id %></td>
          <td><%= task.title %></td>
          <td><%= task.description %></td>
          <td><%= task.due_date %></td>
          <td>
      <%= link_to 'Edit', admin_edit_task_path(task), class: 'btn btn-warning btn-sm' %>
      <%= link_to 'Delete', admin_destroy_task_path(task), class: 'btn btn-danger btn-sm', data: { confirm: 'Are you sure?' } %>
    </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="alert alert-warning" role="alert">
    No tasks available for this user.
  </div>
<% end %>


